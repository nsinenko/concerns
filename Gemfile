source 'https://rubygems.org'
ruby '2.1.1'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '~> 4.1'

# social integration
gem 'foursquare2'
gem 'google_places'
gem 'devise'

#  gem 'pg'
