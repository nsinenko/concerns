  gem 'awesome_print'
  gem 'quiet_assets'
  gem 'pry-rails'
end

group :development, :test do
  gem 'spring'
  gem 'spring-commands-rspec'
  gem 'rspec-rails', '~> 3.0'
  gem 'factory_girl_rails'
  gem 'ffaker'
end

group :test do
  gem 'minitest'
  gem 'shoulda-matchers'
  gem 'capybara'
  gem 'launchy'
end

